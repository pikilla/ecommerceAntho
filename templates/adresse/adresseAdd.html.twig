{% extends 'base.html.twig' %}

{% block title %}Hello AccountController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

{{form_start(form)}}
<div class="row">
    <div class="col-md-12">{{ form_row(form.name)}}
    </div>
     <div class="col-md-6">{{ form_row(form.firstName)}}
    </div>
    <div class="col-md-6">{{ form_row(form.lastName)}}
    </div>
    <div class="col-md-6">{{ form_row(form.societe)}}
    </div>
    <div class="col-md-6">{{ form_row(form.phone)}}

    </div>
    <h1>Adresse postale</h1>
    <div class="col-md-6">{{ form_row(form.address)}}
    </div>
    <div class="col-md-6">{{ form_row(form.city)}}
    </div>
    <div class="col-md-6">{{ form_row(form.country)}}
    </div>
    <div class="col-md-6">{{ form_row(form.postalCode)}}
    </div>
</div>
  {{form_end(form)}}

{% endblock %}
